@model ProjektListViewModel

<div class="popup" id="nova_alternativa_popup">
    <div class="popup_wrapper">
        <div class="popup_header">
            <div class="popup_header_wrapper">
                <h1>
                    Nova alternativa
                </h1>
            </div>
        </div>
        <div class="popup_glavni">
            <div class="popup_glavni_wrapper">
                <form action="/Alternative/NovaAlternativa" id="popup_forma">
                    <input type="hidden" id="id_projekt" name="idProjekta" value="@Model.IdProjekta" />
                    <label for="popup_naziv_input">Naziv alternative</label><br />
                    <input type="text" id="popup_naziv_input" name="nazivAlternative" /><br />
                    <label for="popup_opis_input">Opis alternative</label><br />
                    <textarea type="text" id="popup_opis_input" name="opisAlternative" cols="40" rows="5"></textarea>
                    <input type="submit" value="Dodaj alternativu" id="popup_gumb" />
                </form>
            </div>
        </div>

    </div>
</div>